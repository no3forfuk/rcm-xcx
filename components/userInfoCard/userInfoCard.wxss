/* components/userInfoCard/userInfCard.wxss */

.user-info-card {
    display: flex;
    flex-direction: column;
}

.edit-info {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 0rpx 38.01rpx;
    padding-top: 38.01rpx;
    padding-bottom: 12.67rpx;
    align-items: center;
}

.edit-info .user-photo {
    width: 181rpx;
    height: 181rpx;
    border-radius: 50%;
}

.user-name {
    padding: 14.48rpx 38.01rpx;
    font-size: 38.61rpx;
}

.user-name-text {
    border-bottom: 1px solid rgba(0, 0, 0, 0.2);
    font-size: 20px;
    padding-bottom: 6px;
}

.rank-sign {
    color: #8b8b8b;
    font-size: 28.96rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    padding: 5px 38.01rpx;
}

.focus-funs {
    font-size: 28.96rpx;
    padding: 0rpx 38.01rpx;
}

.focus-funs-item {
    margin-right: 18.1rpx;
}

.focus-num {
    font-size: 38.61rpx;
    margin-right: 18.1rpx;
}
