/* components/popup/popup.wxss */

.popup-components {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
}

.popup-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 11;
}

.popup-bottom {
    width: 100%;
    height: 80px;
    position: fixed;
    bottom: -80px;
    left: 0;
    background-color: #ccc;
    z-index: 12;
}

.large-popup {
    width: 100%;
    height: 90%;
    border-top-right-radius: 4px;
    border-top-left-radius: 4px;
    box-shadow: 0 -1px 1px 1px rgba(0, 0, 0, 0.2);
    background-color: #fff;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 12;
}
