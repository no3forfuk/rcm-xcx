/* components/popup/popup.wxss */

.popup-components {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
}

.popup-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 11;
}

.large-popup {
    width: 100%;
    height: 90%;
    border-top-right-radius: 4px;
    border-top-left-radius: 4px;
    box-shadow: 0 -1px 1px 1px rgba(0, 0, 0, 0.2);
    background-color: #fff;
    position: absolute;
    bottom: 0;
    transform: translateY(100%);
    left: 0;
    z-index: 12;
}

.small-popup {
    width: 100%;
    border-top-right-radius: 4px;
    border-top-left-radius: 4px;
    box-shadow: 0 -1px 1px 1px rgba(0, 0, 0, 0.2);
    background-color: #fff;
    transform: translateY(100%);
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 12;
    padding: 0 18.1rpx;
    box-sizing: border-box;
}

.small-popup-item {
    border-bottom: 1px solid #dedede;
    text-align: center;
    color: #ff2c09;
    padding: 27.75rpx 0;
    font-size: 28.96rpx;
}

.small-popup-item:nth-last-child(1) {
    border-bottom: 0 none;
}
