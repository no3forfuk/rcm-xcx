/* pages/editInfo/editInfo.wxss */

.edit-photo {
    display: flex;
    width: 100%;
    box-sizing: border-box;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 24.13rpx 47.67rpx 24.13rpx 36.2rpx;
    font-size: 28.96rpx;
}

.edit-image {
    width: 95.93rpx;
    height: 95.93rpx;
    border-radius: 50%;
}

.edit-info-item {
    width: 100%;
    box-sizing: border-box;
    height: 74.82rpx;
    padding: 24.13rpx 47.67rpx 23.53rpx 36.2rpx;
    border-top: 1px solid #c8c7cd;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 28.96rpx;
}

.split-item {
    width: 100%;
    height: 12.07rpx;
    background-color: #c8c7cd;
}

.edit-footer {
    margin-top: 36.2rpx;
    display: flex;
    flex-direction: row;
    font-size: 21.72rpx;
    color: #c8c7cd;
    justify-content: space-around;
}

.ckeck-id {
    margin-top: 50rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.check-id-text {
    font-size: 16px;
    color: #4d4d4d;
}

.check-id-cmpt {
    margin-top: 36.2rpx;
    font-size: 38.61rpx;
    width: 60%;
    text-align: center;
    background-color: #ffcece;
    color: #f00;
    border-radius: 4px;
}

.edit-sing-input {
    width: 100%;
    box-sizing: border-box;
    padding: 36.2rpx;
}

.edit-sing-input-text {
    width: 100%;
    border: 1px solid #ebebeb;
    border-radius: 4px;
    font-size: 28.58rpx;
    color: #4d4d4d;
    padding-left: 5px;
}
