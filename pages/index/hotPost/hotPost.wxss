/* pages/index/hotPost/hotPost.wxss */

.hot-post-components {
    width: 100%;
    box-sizing: border-box;
    padding: 10px 5px;
    padding-bottom: 0px;
    border-bottom: 2px solid #ebebeb;
}

.hot-post-title {
    display: flex;
    width: 100%;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;
}

.hot-post-title-text {
    color: #808080;
    font-size: 28.96rpx;
    line-height: 28.96rpx;
}

.hot-post-content {
    /* max-height: 90.07rpx; */
    padding-top: 5px;
    margin-bottom: 5px;
    font-size: 25.34rpx;
    overflow: hidden;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
}

.hot-post-discuss {
    width: 100%;
    border-radius: 4px;
    background-color: #ebebeb;
    padding: 5px;
    margin: 5px 0px;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.hot-post-discuss-content {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: flex-start;
}

.hot-post-discuss-text {
    font-size: 24.13rpx;
    line-height: 30.13rpx;
    margin: 2px 0;
    overflow: hidden;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
}

.hot-post-discuss-right {
    display: flex;
    flex-direction: column;
    justify-content: left;
    margin-left: 5px;
}
