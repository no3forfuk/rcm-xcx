/* pages/element/element.wxss */

.element-page-component {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.element-page-neck {
    display: flex;
    flex-direction: row;
    padding-left: 36.2rpx;
}

.element-page-neck-left {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}

.element-page-neck-vote {
    font-size: 43.44rpx;
}

.element-page-neck-voter {
    color: #8e8f93;
    font-size: 21.72rpx;
    text-decoration: underline;
    white-space: nowrap;
}

.element-page-neck-right {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    padding-left: 54.3rpx;
}

.element-page-neck-right-item {
    display: inline-block;
    margin-left: 36.2rpx;
}

.element-page-shoulder {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 12.07rpx 39.22rpx;
    align-items: center;
}

.element-page-shoulder-left {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;
    border: 1px solid #c8c7cd;
    border-radius: 4px;
    padding: 13.2rpx 41.63rpx 13.2rpx 13.2rpx;
}

.shoulder-left-icon {
    color: #ff2c09;
    font-size: 16px;
}

.shoulder-left-text {
    color: #939398;
    font-size: 16px;
    margin-left: 13.2rpx;
}
