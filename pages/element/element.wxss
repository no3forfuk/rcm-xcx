/* pages/element/element.wxss */

.element-page-component {
    width: 100%;
    height: 100%;
}

.element-page-neck {
    display: flex;
    flex-direction: row;
    height: 42px;
}

.element-page-shoulder {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 12.07rpx 39.22rpx;
    align-items: center;
}

.element-page-shoulder-left {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;
    border: 1px solid #c8c7cd;
    border-radius: 4px;
    padding: 13.2rpx 41.63rpx 13.2rpx 13.2rpx;
}

.shoulder-left-icon {
    color: #ff2c09;
    font-size: 16px;
}

.shoulder-left-text {
    color: #939398;
    font-size: 16px;
    margin-left: 13.2rpx;
}
