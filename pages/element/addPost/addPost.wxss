/* pages/element/addPost/addPost.wxss */

.post-edit-area {
    padding: 36.2rpx;
    border-top: 1px solid #e8e8e8;
    height: calc(100% - 84px);
    box-sizing: border-box;
}

.add-post-component {
    height: 100%;
    width: 100%;
}

.tool-bar {
    height: 46px;
    width: 100%;
    position: absolute;
    left: 0;
    bottom: 0;
    background-color: #ccc;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    display: flex;
    flex-direction: row;
    justify-content: left;
    align-items: center;
}

.input-text {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.1);
    position: absolute;
    padding: 18.1rpx;
    box-sizing: border-box;
    top: 0;
    left: 0;
    z-index: 30;
}

.post_p {
    font-size: 25.34rpx;
    color: #232323;
}

.post_img {
    max-width: 80%;
    border-radius: 4px;
}

.post_a {
    color: #26b8f2;
    font-size: 28.96rpx;
    text-decoration: underline;
}

.post_video {
    max-width: 90%;
    border-radius: 4px;
}

.input-text-textarea {
    background-color: #fff;
    border-radius: 4px;
    width: 100%;
    font-size: 25.34rpx;
    color: #232323;
}

.input-link {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.1);
    position: absolute;
    padding: 18.1rpx;
    box-sizing: border-box;
    top: 0;
    left: 0;
    z-index: 30;
    display: flex;
    justify-content: space-around;
    flex-direction: row;
}

.input-link-box {
    background-color: #fff;
    border-radius: 4px;
    box-sizing: border-box;
    width: 60%;
    height: 80px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 16rpx;
}

.link-devide {
    width: 100%;
    height: 1px;
    background-color: #ebebeb;
}

.link-text {
    background-color: #fff;
    border-radius: 4px;
    font-size: 28.96rpx;
    color: #636363;
}

.placeholder-class {
    font-size: 28.96rpx;
    color: #ebebeb;
}
