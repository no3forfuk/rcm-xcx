/* pages/element/addPost/addPost.wxss */

.post-edit-area {
    padding: 36.2rpx;
    border-top: 1px solid #e8e8e8;
}

.tool-bar {
    height: 46px;
    width: 100%;
    position: absolute;
    left: 0;
    bottom: 0;
    background-color: #ccc;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    display: flex;
    flex-direction: row;
    justify-content: left;
    align-items: center;
}

.input-text {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.1);
    position: absolute;
    padding: 18.1rpx;
    top: 0;
    left: 0;
    z-index: 30;
}

.post_p {
    font-size: 25.34rpx;
    color: #232323;
}

.input-text-textarea {
    background-color: #fff;
    border-radius: 4px;
    width: calc(100% - 36.2rpx);
    font-size: 25.34rpx;
    color: #232323;
}
